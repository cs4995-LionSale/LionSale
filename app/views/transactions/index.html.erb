<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Seller</th>
      <th>Buyer</th>
      <th>Expected deal time</th>
      <th>Real deal time</th>
      <th>Deal address</th>
      <th>Deal price</th>
      <th>Status</th>
      <th>Seller rating</th>
      <th>Buyer rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.item_id %></td>
        <td><%= transaction.seller_id %></td>
        <td><%= transaction.buyer_id %></td>
        <td><%= transaction.expected_deal_time %></td>
        <td><%= transaction.real_deal_time %></td>
        <td><%= transaction.deal_address %></td>
        <td><%= transaction.deal_price %></td>
        <td><%= transaction.status %></td>
        <td><%= transaction.seller_rating %></td>
        <td><%= transaction.buyer_rating %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_transaction_path %>
