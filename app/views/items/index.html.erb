<% content_for :page_title do %>Find some items<% end %>
<% content_for :page_description do %>Item index page<% end %>
<% content_for :content do %>
<section class="section">
  <div class="container">
    <% if @categories %>
    <nav class="breadcrumb" aria-label="breadcrumbs">
      <ul>
      <% @categories.each do |cat| %>
        <% if cat.equal?(@categories.last) %>
        <li><%= link_to cat.name, items_path(category_id:cat.id), class: "is-active" %></li>
        <% else %>
        <li><%= link_to cat.name, items_path(category_id:cat.id)%></li>
        <% end %>
      <% end %>
      </ul>
    </nav>
    <% end %>
    <div class="columns is-multiline">
      <div class="column is-4">
      <% @items.each_with_index do |item,index| %>
      <% if index%3==0 %>
        <%= render 'item_card', item:item,index:index,current_user:@current_user %>
      <% end %>
      <% end %>
      </div>
      <div class="column is-4">
      <% @items.each_with_index do |item,index| %>
      <% if index%3==1 %>
        <%= render 'item_card', item:item,index:index,current_user:@current_user %>
      <% end %>
      <% end %>
      </div>    
      <div class="column is-4">
      <% @items.each_with_index do |item,index| %>
      <% if index%3==2 %>
        <%= render 'item_card', item:item,index:index,current_user:@current_user %>
      <% end %>
      <% end %>
      </div>      
    </div>
  </div>
</section>

<% end %>
<%= render template: "layouts/application" %>
